<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="@color/shWhite"/>
            <solid android:color="@color/shWhite" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/shDarkBlue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="@color/shDarkBlue"/>
            <solid android:color="@color/shWhite" />
        </shape>
    </item>
</selector>